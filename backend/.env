# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/codetrackpro
MONGODB_TEST_URI=mongodb://localhost:27017/codetrackpro_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# External API Keys (for platform integrations)
LEETCODE_API_KEY=your_leetcode_api_key_here
CODEFORCES_API_KEY=your_codeforces_api_key_here
HACKERRANK_API_KEY=your_hackerrank_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5000000
UPLOAD_PATH=./uploads

# Email Configuration (optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Redis Configuration (optional for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
